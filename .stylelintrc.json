{
    "extends": [
      "stylelint-config-standard-scss",
      "stylelint-config-tailwindcss"
    ],
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "apply",
            "variants",
            "responsive",
            "screen",
            "layer"
          ]
        }
      ],
      "scss/at-rule-no-unknown": null,
      "no-descending-specificity": null,
      "block-no-empty": null,
      "no-empty-source": null
    }
  }
  